<h1>Give a donation with Stripe:</h1>
<div class='form-group'>
  <form action='/nonprofits/<%= @nonprofit.id %>/donations' method="POST" id="payment-form">
    <div class='payment-errors'>
      <span class="payment-errors"></span>
    </div>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input name="donation[nonprofit_id]" value="<%= @nonprofit.id %>" type="hidden">
    <input name='donation[token]' value='<%= form_authenticity_token %>' type='hidden'>
    <div class="form-row">
      <label>
        <span>Amount</span>
        <input type="text" name='donation[amount]' data-stripe='amount'/>
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>Card Number</span>
        <input type="text" size="20" data-stripe="number"/>
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>CVC</span>
        <input type="text" size="4" data-stripe="cvc"/>
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>Expiration (MM/YYYY)</span>
        <input type="text" size="2" data-stripe="exp-month"/>
      </label>
      <span> / </span>
      <input type="text" size="4" data-stripe="exp-year"/>
    </div>

    <button type="submit">Submit Payment</button>
  </form>
</div>
